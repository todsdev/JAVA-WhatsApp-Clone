<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/default_adapter_recycler_unit_padding_start"
    android:paddingTop="@dimen/default_adapter_recycler_unit_padding_top"
    android:paddingEnd="@dimen/default_adapter_recycler_unit_padding_end"
    android:paddingBottom="@dimen/default_adapter_recycler_unit_padding_bot"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageContacts"
        android:layout_width="@dimen/default_adapter_recycler_unit_image_width"
        android:layout_height="@dimen/default_adapter_recycler_unit_image_height"
        android:src="@drawable/standard" />

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="@dimen/default_adapter_recycler_unit_inner_padding">

            <TextView
            android:id="@+id/editTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/name"
            android:textColor="@color/black"
            android:textStyle="bold" />

            <TextView
            android:id="@+id/editSubtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/e_mail"
            android:textColor="@color/black" />
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_adapter_recycler_unit_divider_height"
        android:background="?android:attr/listDivider"
        android:layout_marginStart="@dimen/default_adapter_recycler_unit_divider_margin_start"
        android:layout_marginEnd="@dimen/default_adapter_recycler_unit_divider_margin_end">
    </ImageView>

</LinearLayout>