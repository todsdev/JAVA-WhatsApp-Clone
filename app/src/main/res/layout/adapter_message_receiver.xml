<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/default_adapter_message_receiver_padding"
    android:paddingEnd="@dimen/default_adapter_message_receiver_padding_end"
    android:layout_marginEnd="@dimen/default_adapter_message_receiver_margin_end"
    android:layout_marginTop="@dimen/default_adapter_message_receiver_margin_top">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:background="@drawable/background_chat_message"
        android:backgroundTint="@color/gray"
        android:orientation="vertical"
        android:padding="@dimen/default_adapter_message_receiver_inner_padding">

        <TextView
            android:id="@+id/textUserNameExhibition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/default_adapter_message_receiver_text_username_margin_start"
            android:layout_marginTop="@dimen/default_adapter_message_receiver_text_username_margin_top"
            android:layout_marginEnd="@dimen/default_adapter_message_receiver_text_username_margin_end"
            android:gravity="start"
            android:textSize="@dimen/default_adapter_message_receiver_text_username_size" />

        <ImageView
            android:id="@+id/imagePhotoChat"
            android:layout_width="@dimen/default_adapter_message_receiver_image_width"
            android:layout_height="@dimen/default_adapter_message_receiver_image_height"
            android:padding="@dimen/default_adapter_message_receiver_image_padding"
            app:srcCompat="@drawable/standard" />

        <TextView
            android:id="@+id/textMessageChat"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/default_adapter_message_receiver_text_message_size"
            android:padding="@dimen/default_adapter_message_receiver_text_message_padding"
            android:text="@string/message"
            android:textSize="@dimen/default_adapter_message_receiver_text_message_size" />
    </LinearLayout>

</RelativeLayout>