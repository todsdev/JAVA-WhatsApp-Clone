<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/default_adapter_selected_group_padding">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/default_adapter_selected_group_inner_padding">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageViewSelectedMember"
            android:layout_width="@dimen/default_adapter_selected_group_image_width"
            android:layout_height="@dimen/default_adapter_selected_group_image_height"
            android:src="@drawable/standard" />

        <TextView
            android:id="@+id/editSelectedMemberName"
            android:layout_width="@dimen/default_adapter_selected_group_text_width"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/nome"
            android:textColor="@color/black"
            android:textSize="@dimen/default_adapter_selected_group_text_size"
            android:textStyle="bold" />

    </LinearLayout>
</LinearLayout>